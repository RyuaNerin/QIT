; Top-most http://editorconfig.org/ file
root = true

[*]
end_of_line = crlf
charset = utf-8
insert_final_newline = true

; 4-column tab indentation
[*.cs]
indent_style = space
indent_size = 4

[*.cpp]
indent_style = space
indent_size = 4

[*.h]
indent_style = space
indent_size = 4

[*.def]
indent_style = space
indent_size = 4

[*.rc]
indent_style = space
indent_size = 4